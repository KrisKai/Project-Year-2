
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@using PagedList;
@using PagedList.Mvc;

@model PagedList.IPagedList<Project_Year_2.Models.EF.Message>


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Bảng thông tin</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin của Lời nhắn</h6>
        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Họ và Tên</th>
                            <th>Email</th>
                            <th>Lời nhắn</th>
                            <th>Ngày tạo</th>
                        </tr>
                    </thead>
                    <tbody>
                       @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID_Message">
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.Message1</td>
                                        <td>@item.CreatedDate</td>
                                    </tr>
                                }
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
