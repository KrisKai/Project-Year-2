
@{
    ViewBag.Title = "Order Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Project_Year_2.Models.EF.Order>
@section jsFooter{
    <script src="~/Assets/Admin/js/Controller/MenuController.js"></script>
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Bảng thông tin</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin của Đơn đặt bàn</h6>
        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Họ</th>
                            <th>Tên</th>
                            <th>Email</th>
                            <th>Số người</th>
                            <th>Số điện thoại</th>
                            <th>Ngày</th>
                            <th>Giờ</th>
                            <th>Lời nhắn</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Chỉnh sửa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr id="row_@item.ID_Table">
                                    @{ViewBag.ID_Table = item.ID_Table; }
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.Email</td>
                                    <td>@item.PeopleCount</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Date</td>
                                    <td>@item.Time</td>
                                    <td>@item.Message</td>
                                    <td>@item.CreatedDate</td>
                                    <td><a href="#" class="btn-active" data-id="@item.ID_Table">@(item.Status ? "Chờ" : "Xong")</a></td>
                                    <td>
                                        <a href="Edit/@item.ID_Table">Sửa</a>
                                        |
                                        <a href="Delete/@item.ID_Table">Xóa</a>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>