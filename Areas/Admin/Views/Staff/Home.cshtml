@{
    ViewBag.Title = "Staff Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using PagedList;
@using PagedList.Mvc;

@model PagedList.IPagedList<Project_Year_2.Models.EF.Staff>

<!-- Custom fonts for this template -->
<link href="~/Assets/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

<!-- Custom styles for this template -->
<link href="~/Assets/Admin/css/sb-admin-2.min.css" rel="stylesheet">

<!-- Custom styles for this page -->
<link href="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Bảng thông tin</h1>

            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin của Khách hàng</h6>
                </div>
                @using (Html.BeginForm("Index", "Staff", FormMethod.Get))
                {
                    <div class="container">
                        <div class="tab-content">
                            <input type="text" value="@ViewBag.SearchString" name="SearchString" />
                            <button type="submit" class="btn btn-primary">
                                Tìm kiếm
                            </button>
                        </div>

                    </div>

                }
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" cellspacing="0">

                            <tr>
                                <th>Tài khoản</th>
                                <th>Mật khẩu</th>
                                <th>Họ và Tên</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>CMND</th>
                                <th>Email</th>
                            </tr>

                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID_Staff">
                                        <td>@item.UserName</td>
                                        <td>@item.Password</td>
                                        <td>@item.Name</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Address</td>
                                        <td>@item.IdentityID</td>
                                        <td>@item.Email</td>
                                        
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                </div>
                @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page, @searchString = @ViewBag.SearchString }))
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

</div>
<!-- End of Content Wrapper -->
<!-- Bootstrap core JavaScript-->
<script src="~/Assets/Admin/vendor/jquery/jquery.min.js"></script>
<script src="~/Assets/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="~/Assets/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
<script src="~/Assets/Admin/js/sb-admin-2.min.js"></script>

<!-- Page level plugins -->
<script src="~/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="~/Assets/Admin/js/demo/datatables-demo.js"></script>
