
@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Project_Year_2.Models.EF.Account


<div class="container-fluid">
    <div class="panel-heading font-weight-bolder">
        Profile
        <hr />
    </div>
    <div class="row">
        <div class="col-lg-5 d-none d-lg-block text-center">
            <div>Ảnh đại diện</div>
            <img src="@Session["Avatar"]" class="mx-auto" width="300" height="300" />
            <br>
            <br>
            <p><a href="https://colorlib.com/" target="_blank" class="btn btn-outline-dark btn-lg site-animate" data-toggle="modal" data-target="#changeAvatarModal">Thay đổi ảnh</a></p>
        </div>
        <div class="col-lg-6">
            <div class="panel panel-default">

                <div class="panel-body">

                    <div class="shadow p-4 mb-4 bg-white">
                        @using (Html.BeginForm("Index", "Profile", FormMethod.Get))
                        {

                            <div class="form-group font-weight-bold">

                                <div class="col-md-4">
                                    <span>Tài khoản:</span>
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                </div>
                            </div>


                            <div class="form-group font-weight-bold">
                                <div class="col-md-6">
                                    <span>Họ và Tên:</span>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                </div>
                            </div>

                            <div class="form-group font-weight-bold">
                                <div class="col-md-6">

                                    <span>Số điện thoại:</span>
                                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                </div>
                            </div>


                            <div class="form-group font-weight-bold">
                                <div class="col-md-6">
                                    <span>Ngày sinh:</span>
                                    @Html.EditorFor(model => model.BirthDay, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                </div>
                            </div>

                            <div class="form-group font-weight-bold">
                                <div class="col-md-6">
                                    <span>CMND:</span>
                                    @Html.EditorFor(model => model.IdentityID, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                </div>
                            </div>

                            <div class="form-group font-weight-bold">
                                <div class="col-md-9">
                                    <span>Địa chỉ:</span>
                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                </div>
                            </div>

                            <div class="form-group font-weight-bold">
                                <div class="col-md-7">
                                    <span>Email:</span>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                </div>
                            </div>


                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="changeAvatarModal" tabindex="-1" role="dialog" aria-labelledby="changeAvatarModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="col-lg-12">
                    @using (Html.BeginForm("Profile", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <small>ĐÓNG </small><span aria-hidden="true">&times;</span>
                        </button>
                        <br>
                        <hr />
                        <br>
                        if (ViewBag.Success != null)
                        {
                            <div class="alert alert-success">@ViewBag.Success</div>
                        }
                        <div class="form-group font-weight-bold text-center">

                            @Html.LabelFor(model => model.AvatarFile, new { @class = "control-label col-md-10" })
                            <br>
                            <div class="col-md-10">
                                <input type="file" name="AvatarFile" required />
                            </div>
                        </div>
                        <br>
                        <br>
                        <br>
                        <br>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Xác nhận">
                            </div>
                        </div>
                        <br>
                        <br>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

