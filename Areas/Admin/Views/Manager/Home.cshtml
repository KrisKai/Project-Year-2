@{
    ViewBag.Title = "Manager Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Project_Year_2.Models.EF.Account>

<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin của Quản lí</h6>
        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tài khoản</th>
                            <th>Chi tiết</th>
                            <th>Ngày tạo</th>
                            <th>Người tạo</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.UserName</td>
                                    <td><a href="#" target="_blank" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#Model_@item.ID">Chi tiết</a></td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.CreatedBy</td>
                                    <td>@(item.Status ? "Kích hoạt" : "Khóa")</td>

                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="modal fade" id="Model_@item.ID" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="bg-image" style="background-image: url(/Assets/Client/images/reservation_1.jpg);"></div>
                            </div>
                            <div class="col-lg-12 p-5">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <small>ĐÓNG </small><span aria-hidden="true">&times;</span>
                                </button>
                                <br >
                                <div class="mb-4">
                                    <div class="form-group font-weight-bold">
                                        <hr />
                                        <div class="text-center">Thông tin chi tiết của @item.UserName</div>
                                        <br>
                                        <br>
                                        <div>
                                            <span class="col-md-8">Họ tên:</span>
                                            @if (@item.User_Infor != null)
                                            {
                                                @item.User_Infor.Name
                                            }
                                            else
                                            {
                                                <div>Trống</div>
                                            }
                                        </div>
                                        <div>
                                            <span class="col-md-8">Số điện thoại:</span>
                                            @if (@item.User_Infor != null)
                                            {
                                                @item.User_Infor.PhoneNumber
                                            }
                                            else
                                            {
                                                <span>Trống</span>
                                            }
                                        </div>
                                        <div>
                                            <span class="col-md-8">Địa chỉ:</span>
                                            @if (@item.User_Infor != null)
                                            {
                                                @item.User_Infor.Address
                                            }
                                            else
                                            {
                                                <div>Trống</div>
                                            }
                                        </div>
                                        <div>
                                            <span class="col-md-8">CMND:</span>
                                            @if (@item.User_Infor != null)
                                            {
                                                @item.User_Infor.IdentityID
                                            }
                                            else
                                            {
                                                <div>Trống</div>
                                            }
                                        </div>
                                        <div>
                                            <span class="col-md-8">Ngày sinh:</span>
                                            @if (@item.User_Infor != null)
                                            {
                                                @item.User_Infor.BirthDay
                                            }
                                            else
                                            {
                                                <div>Trống</div>
                                            }
                                        </div>
                                        <div>
                                            <span class="col-md-8">Email:</span>
                                            @if (@item.User_Infor != null)
                                            {
                                                @item.User_Infor.Email
                                            }
                                            else
                                            {
                                                <div>Trống</div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
