@model Project_Year_2.Models.EF.Message

<nav class="navbar navbar-expand-lg navbar-dark site_navbar bg-dark site-navbar-light" id="site-navbar">
    <div class="container">
        <a class="navbar-brand" href="/Home/Index">Nhà Hàng</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#site-nav" aria-controls="site-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="oi oi-menu">Menu</span>
        </button>

        <div class="collapse navbar-collapse" id="site-nav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active"><a href="#section-home" class="nav-link">Trang chủ</a></li>
                <li class="nav-item"><a href="#section-about" class="nav-link">Thông tin</a></li>
                <li class="nav-item"><a href="#section-offer" class="nav-link">Nổi bật</a></li>
                <li class="nav-item"><a href="#section-menu" class="nav-link">Thực đơn</a></li>
                <li class="nav-item"><a href="#section-news" class="nav-link">Tin tức</a></li>
                <li class="nav-item"><a href="#section-gallery" class="nav-link">Thư viện ảnh</a></li>
                <li class="nav-item"><a href="#section-contact" class="nav-link">Liên hệ</a></li>
            </ul>
        </div>
    </div>
</nav>
<!-- END nav -->

<section class="site-cover" style="background-image: url(/Assets/Client/images/bg_3.jpg);" id="section-home">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center site-vh-100">
            <div class="col-md-12">
                <h1 class="site-heading site-animate mb-3">Chào mừng tới Nhà hàng của Chúng tôi</h1>
                <h2 class="h5 site-subheading mb-5 site-animate">Hãy đến và thưởng thức những món ăn bổ dưỡng &amp; lành mạnh.</h2>
                <p><a href="#" target="_blank" class="btn btn-outline-white btn-lg site-animate" data-toggle="modal" data-target="#reservationModal">Đặt Bàn</a></p>
            </div>
        </div>
    </div>
</section>
<!-- END section -->


<section class="site-section" id="section-about">
    <div class="container">
        <div class="row">
            <div class="col-md-5 site-animate mb-5">
                <h4 class="site-sub-title">Câu chuyện của Chúng tôi</h4>
                <h2 class="site-primary-title display-4">Chào mừng</h2>
                <p>Nhằm hướng tới phục vụ cho nhu cầu của khách hàng, hiện nhà hàng chúng tôi đang có một đội ngũ các đầu bếp và phục vụ giỏi cùng với nhiều năm kinh nghiệm trong ngành ẩm thực. </p>

                <p class="mb-4">Vậy nên chúng tôi cam kết sẽ phục vụ những thực đơn và dịch vụ tốt nhất, chất lượng nhất đến Quý khách hàng với phương châm “Đáp ứng sự kỳ vọng của khách hàng là sự thành công của chúng tôi".</p>
                <p><a href="/About/Index" class="btn btn-secondary btn-lg">Tìm hiểu thêm</a></p>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-6 site-animate img" data-animate-effect="fadeInRight">
                <img src="~/Assets/Client/images/about_img_1.jpg" alt="Free Template by colorlib.com" class="img-fluid">
            </div>
        </div>
    </div>
</section>
<!-- END section -->


<section class="site-section bg-light" id="section-offer">
    <div class="container">
        @RenderPage("_Offer.cshtml")
    </div>
</section>
<!-- END section -->

<section class="site-section" id="section-menu">
    <div class="container">
        @RenderPage("_Menu.cshtml")
    </div>
</section>
<!-- END section -->

<section class="site-section bg-light" id="section-news">
    <div class="container">
        @RenderPage("_News.cshtml")
    </div>
</section>
<!-- END section -->

<section class="site-section" id="section-gallery">
    <div class="container">
        @RenderPage("_Gallery.cshtml")
    </div>
</section>
<!-- END section -->

<section class="site-section bg-light" id="section-contact">
    <div class="container">
        <div class="row">

            <div class="col-md-12 text-center mb-5 site-animate">
                <h2 class="display-4">Giữ Liên Lạc</h2>
                <div class="row justify-content-center">
                    <div class="col-md-7">
                        <p class="lead">Với mỗi góp ý của các bạn sẽ góp phần cải thiện chất lượng dịch vụ của Nhà hàng.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-7 mb-5 site-animate">
                @using (Ajax.BeginForm("Create", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "POST", OnSuccess = "ShowMessage" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-success" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label sr-only" })
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Tên", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label sr-only" })
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email", id = "email", @type = "email", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Message1, htmlAttributes: new { @class = "control-label sr-only" })
                        @Html.TextAreaFor(model => model.Message1, new { @class = "form-control", @placeholder = "Để lại lời nhắn", @id = "message", @cols = "30", @rows = "10", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Message1, "", new { @class = "text-danger" })
                    </div>
                    @Html.HiddenFor(model => model.CreatedDate, new { @Value = DateTime.Now.ToShortDateString() })
                    @Html.HiddenFor(model => model.Status, new { @Value = "True" })
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-lg" value="Gửi lời nhắn">
                    </div>
                }
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-4 site-animate">
                <p><img src="~/Assets/Client/images/about_img_1.jpg" alt="" class="img-fluid"></p>
                <p class="text-black">
                    Địa chỉ: <br> XX đường YY , thành phố ZZ <br> Việt Nam <br> <br>
                    Số điện thoại: <br> (0123)-456-789 <br> <br>
                    Email: <br> <a href="mailto:myrestaurantproject2020@gmail.com">myrestaurantproject2020@gmail.com</a>
                </p>

            </div>

        </div>
    </div>
</section>
<!-- END section -->
<script type="text/javascript">

        function ShowMessage(isRequestSuccessed) {
            alert("Gửi lời nhắn thành công!");
            if (isRequestSuccessed == false) {
                $("#post-error").html("Nhập lỗi! Mời nhập lại!");
            }
            else
            {
                window.location.href = "/Home/Index";
            }
        }
</script>
