@model IEnumerable<Project_Year_2.Models.EF.Menu>

<div class="row">
    <div class="col-md-12 text-center mb-5 site-animate">
        <h2 class="display-4">Thực đơn</h2>
        <div class="row justify-content-center">
            <div class="col-md-7">
                <p class="lead">Có rất nhiều sự lựa chọn cho tất cả mọi người.</p>
            </div>
        </div>
    </div>

    <div class="col-md-12 text-center">

        <ul class="nav site-tab-nav nav-pills mb-5" id="pills-tab" role="tablist">
            <li class="nav-item site-animate">
                <a class="nav-link active" id="pills-breakfast-tab" data-toggle="pill" href="#pills-breakfast" role="tab" aria-controls="pills-breakfast" aria-selected="true">Bữa sáng</a>
            </li>
            <li class="nav-item site-animate">
                <a class="nav-link" id="pills-lunch-tab" data-toggle="pill" href="#pills-lunch" role="tab" aria-controls="pills-lunch" aria-selected="false">Bữa trưa</a>
            </li>
            <li class="nav-item site-animate">
                <a class="nav-link" id="pills-dinner-tab" data-toggle="pill" href="#pills-dinner" role="tab" aria-controls="pills-dinner" aria-selected="false">Bữa tối</a>
            </li>
        </ul>

        <div class="tab-content text-left">
            <div class="tab-pane fade show active" id="pills-breakfast" role="tabpanel" aria-labelledby="pills-breakfast-tab">
                <div class="row">

                    @{ int counter = 0; }
                    @if (ViewBag.Menu != null)
                    {
                        foreach (var item in ViewBag.Menu)
                        {
                            if (item.Type == "Breakfast")
                            {
                                if (counter != 0 && counter % 3 == 0)
                                {
                                @:</div>
                                @:<div class="row">
                                }
                                <div class="col-md-6 site-animate">

                                    <div class="media menu-item">
                                        <img class="mr-3 img-fluid" src=@Url.Content(item.ImagePath) alt="#">
                                        <div class="media-body">
                                            <h5 class="mt-0">@item.Name</h5>
                                            <p>@item.Description</p>
                                            <h6 class="text-primary menu-price">$@item.Price</h6>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
            <div class="tab-pane fade" id="pills-lunch" role="tabpanel" aria-labelledby="pills-lunch-tab">
                <div class="row">

                    @{ int lunch = 0; }
                    @if (ViewBag.Menu != null)
                    {
                        foreach (var item in ViewBag.Menu)
                        {
                            if (item.Type == "Lunch")
                            {
                                if (lunch != 0 && lunch % 3 == 0)
                                {
                                @:</div>
                                @:<div class="row">
                                }
                                <div class="col-md-6 site-animate">

                                    <div class="media menu-item">
                                        <img class="mr-3 img-fluid" src=@Url.Content(item.ImagePath) alt="#">
                                        <div class="media-body">
                                            <h5 class="mt-0">@item.Name</h5>
                                            <p>@item.Description</p>
                                            <h6 class="text-primary menu-price">$@item.Price</h6>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
            <div class="tab-pane fade" id="pills-dinner" role="tabpanel" aria-labelledby="pills-dinner-tab">
                <div class="row">

                    @{ int dinner = 0; }
                    @if (ViewBag.Menu != null)
                    {
                        foreach (var item in ViewBag.Menu)
                        {
                            if (item.Type == "Dinner")
                            {
                                if (dinner != 0 && dinner % 3 == 0)
                                {
                                @:</div>
                                @:<div class="row">
                                }
                                <div class="col-md-6 site-animate">

                                    <div class="media menu-item">
                                        <img class="mr-3 img-fluid" src=@Url.Content(item.ImagePath) >
                                        <div class="media-body">
                                            <h5 class="mt-0">@item.Name</h5>
                                            <p>@item.Description</p>
                                            <h6 class="text-primary menu-price">$@item.Price</h6>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>

    </div>
</div>